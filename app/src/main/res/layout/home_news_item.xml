<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@color/white"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardElevation="3dp"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x90"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical">

            <TextView
                android:maxLines="1"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人生如棋"
                android:textSize="@dimen/x16"/>

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text="心里学问题"
                android:textSize="@dimen/x14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x10"
                    android:layout_height="@dimen/x10"
                    android:layout_marginTop="@dimen/x3"
                    android:background="@drawable/icon_like"/>

                <TextView
                    android:id="@+id/tv_count_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:textSize="@dimen/x12"
                    android:text="100"
                    android:textColor="@color/text_color_lightblack"/>


                <ImageView
                    android:layout_width="@dimen/x10"
                    android:layout_height="@dimen/x10"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x3"
                    android:background="@drawable/tucao_view"/>

                <TextView
                    android:textSize="@dimen/x12"
                    android:id="@+id/tv_count_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="100"
                    android:textColor="@color/text_color_lightblack"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>